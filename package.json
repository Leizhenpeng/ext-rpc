{
  "name": "ext-rpc",
  "type": "module",
  "version": "0.0.3",
  "packageManager": "pnpm@9.1.1",
  "description": "ðŸ”§ Enhance your Chrome extensions with efficient and type-safe RPC communication across all layers.",
  "author": "leizhenpeng <laolei@forkway.cn>",
  "license": "MIT",
  "funding": "https://github.com/sponsors/leizhenpeng",
  "homepage": "https://github.com/leizhenpeng/ext-rpc#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/leizhenpeng/ext-rpc.git"
  },
  "bugs": "https://github.com/leizhenpeng/ext-rpc/issues",
  "keywords": [
    "chrome",
    "extension",
    "rpc",
    "communication",
    "content script",
    "background script",
    "popup",
    "type-safe",
    "efficient",
    "reliable",
    "seamless"
  ],
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "typesVersions": {
    "*": {
      "*": [
        "./dist/*",
        "./dist/index.d.ts"
      ]
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint .",
    "prepublishOnly": "nr build",
    "release": "bumpp && npm publish",
    "start": "esno src/index.ts",
    "test": "vitest",
    "play": "live-server --port=3000 --entry-file=playground/index.html",
    "typecheck": "tsc --noEmit",
    "prepare": "simple-git-hooks"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.18.1",
    "@antfu/ni": "^0.21.12",
    "@antfu/utils": "^0.7.8",
    "@types/chrome": "^0.0.269",
    "@types/node": "^20.12.12",
    "bumpp": "^9.4.1",
    "eslint": "^9.3.0",
    "esno": "^4.7.0",
    "ext-msg": "^0.0.4",
    "lint-staged": "^15.2.2",
    "live-server": "^1.2.2",
    "pnpm": "^9.1.1",
    "rimraf": "^5.0.7",
    "simple-git-hooks": "^2.11.1",
    "tsup": "^8.1.0",
    "type-fest": "^4.24.0",
    "typescript": "^5.4.5",
    "vite": "^5.2.11",
    "vitest": "^1.6.0"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
